{
  "extends": "./node_modules/TiFShared/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "strict": true,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true,
    "paths": {
      "TiFShared/*": ["./node_modules/TiFShared/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "preserveSymlinks": true,
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}
