{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@layer/*": ["./*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
}
