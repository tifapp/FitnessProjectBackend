{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "strict": false,
    "declaration": false,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "preserveSymlinks": true,
  "include": ["**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "test"]
}
